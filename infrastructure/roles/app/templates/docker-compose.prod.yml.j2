# Docker Compose for production - Generated by Ansible
# Do not edit manually - changes will be overwritten on deploy
version: '3.8'

services:
  api:
    image: {{ docker_registry }}/ai-backend:{{ image_tag }}
    restart: unless-stopped
    ports:
      - "127.0.0.1:8000:8000"
    env_file:
      - .env
    depends_on:
      redis:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    deploy:
      resources:
        limits:
          memory: 2G
        reservations:
          memory: 512M

  worker:
    image: {{ docker_registry }}/ai-backend:{{ image_tag }}
    command: celery -A app.workers.celery_app worker -l info -Q default,llm -c 4
    restart: unless-stopped
    env_file:
      - .env
    depends_on:
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 4G
        reservations:
          memory: 1G

  extraction-worker:
    image: {{ docker_registry }}/ai-backend:{{ image_tag }}
    command: celery -A app.workers.celery_app worker -l info -Q extraction -c 2
    restart: unless-stopped
    env_file:
      - .env
    depends_on:
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 8G
        reservations:
          memory: 2G

  transcription-worker:
    image: {{ docker_registry }}/ai-backend:{{ image_tag }}
    command: celery -A app.workers.celery_app worker -l info -Q transcription -c 3
    restart: unless-stopped
    env_file:
      - .env
    depends_on:
      redis:
        condition: service_healthy
    deploy:
      resources:
        limits:
          memory: 2G
        reservations:
          memory: 512M

  redis:
    image: redis:7-alpine
    restart: unless-stopped
    volumes:
      - redis_data:/data
    command: redis-server --appendonly yes
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 256M

  flower:
    image: {{ docker_registry }}/ai-backend:{{ image_tag }}
    command: celery -A app.workers.celery_app flower --port=5555 --basic_auth={{ flower_user }}:{{ flower_password }}
    restart: unless-stopped
    ports:
      - "127.0.0.1:5555:5555"
    environment:
      - REDIS_URL={{ redis_url }}
    depends_on:
      - redis

volumes:
  redis_data:
