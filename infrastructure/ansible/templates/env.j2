# Xenios AI Backend Configuration - Production
# Managed by Ansible - Do not edit manually

# Environment
ENVIRONMENT=production
DEBUG=true

# Database (Supabase PostgreSQL)
DATABASE_URL={{ database_url }}

# Authentication
SUPABASE_JWT_SECRET={{ supabase_jwt_secret }}
XENIOS_BACKEND_API_KEY={{ xenios_backend_api_key }}

# Redis (internal Docker network)
REDIS_URL=redis://redis:6379/0

# LLM Providers
OPENROUTER_API_KEY={{ openrouter_api_key }}
ANTHROPIC_API_KEY={{ anthropic_api_key | default('') }}
LLM_DEFAULT_PROVIDER={{ llm_default_provider | default('openrouter') }}

# Deepgram
DEEPGRAM_API_KEY={{ deepgram_api_key }}

# Logging
LOG_LEVEL={{ log_level | default('INFO') }}

# CORS
CORS_ORIGINS={{ cors_origins | default('https://xenios.app') }}

# Flower
FLOWER_USER={{ flower_user | default('admin') }}
FLOWER_PASSWORD={{ flower_password }}

# S3/R2 Storage
S3_ENDPOINT_URL={{ s3_endpoint_url | default('') }}
S3_BUCKET={{ s3_bucket | default('xenios-extractions') }}
S3_ACCESS_KEY_ID={{ s3_access_key_id }}
S3_SECRET_ACCESS_KEY={{ s3_secret_access_key }}
S3_REGION={{ s3_region | default('us-east-1') }}

# Extraction Settings
EXTRACTION_MAX_FILE_SIZE_MB={{ extraction_max_file_size_mb | default('50') }}
EXTRACTION_WEBHOOK_URL={{ extraction_webhook_url | default('') }}

# Transcription Settings
TRANSCRIPTION_MAX_FILE_SIZE_MB={{ transcription_max_file_size_mb | default('500') }}
TRANSCRIPTION_MAX_DURATION_MINUTES={{ transcription_max_duration_minutes | default('120') }}
TRANSCRIPTION_MIN_DURATION_SECONDS={{ transcription_min_duration_seconds | default('10') }}
TRANSCRIPTION_S3_BUCKET={{ transcription_s3_bucket | default('xenios-transcriptions') }}
